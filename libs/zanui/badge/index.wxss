.zan-badge {
    position: relative;
}

.zan-badge__text {
    position: absolute;
    top: -2.4em;
    right: .2em;
    height: 1.6em;
    min-width: 1.6em;
    line-height: 1.6;
    padding: 0 .4em;
    font-size: 20px;
    border-radius: .8em;
    background: #f44;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    transform: translateX(50%) scale(.5);
    transform-origin: center;
    z-index: 10;
    box-shadow: 0 0 0 2px #fff;
    box-sizing: border-box;
}