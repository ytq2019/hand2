.cu-bar .search-form {
    background-color: #fff;
    margin-right: 0;
}

.cu-bar .search-form+.action {
    margin-right: 0;
}

.search .logo {
    width: 50rpx;
    height: 32rpx;
}

.cu-custom .cu-bar .border-custom {
    background: rgba(255,255,255,0.6);
    border: 1rpx solid rgba(0,0,0,0.1);
    color: #000;
}

.cu-custom .cu-bar .border-custom:before {
    background-color: rgba(0,0,0,0.3);
}

.cu-card.dynamic>.cu-item>.text-content {
    padding-top: 20rpx;
}

.cu-card.dynamic>.cu-item .only-img {
    height: 480rpx;
    border-radius: 10rpx;
}

.cu-card>.cu-item {
    margin-top: 0;
}

.cu-list.menu>.cu-item {
    min-height: 80rpx;
}

.cu-list.menu>.cu-item.arrow {
    padding-right: 70rpx;
}

.status_wrap {
    border-radius: 30rpx;
    width: 140rpx;
}

.status_wrap.playing_status {
    background: #FF6666;
}

.status_wrap.preplay_status {
    background: #3DD1AC;
}

.status_wrap.replay_status {
    background: #99CCFF;
}

.status_wrap.other_status {
    background: #ccc;
}

.status_icon {
    width: 50rpx;
    height: 50rpx;
}

.btn_share {
    width: 100%;
    height: 50rpx;
    padding: 0 20rpx;
}

.item_foot {
    line-height: 50rpx;
}