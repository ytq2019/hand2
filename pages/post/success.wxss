.container {
    position: fixed;
    padding: 0;
    width: 100%;
    height: 100%;
}

.post_success.png {
    width: 300rpx;
    height: 244rpx;
}

.item_wrap {
    margin: 0 24rpx;
}

.cu-item {
    background-color: #f2f2f2!important;
    border-radius: 20rpx!important;
    padding: 24rpx!important;
}

.cu-card.article>.cu-item .content {
    padding: 0;
}

.cu-card.article>.cu-item .content image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
}

.text-content {
    color: var(--black)!important;
    display: -webkit-box;
    height: 80rpx!important;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.coin.png {
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}

.btn_wrap {
    margin: 0 auto;
    margin-top: 70rpx;
    min-width: 57%;
}