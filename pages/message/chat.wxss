.post_wrap {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 101;
    width: 100%;
}

.post_wrap image {
    width: 120rpx;
    height: 120rpx;
}

.post_wrap .post_right {
    position: relative;
    overflow: hidden;
}

.post_wrap .post_right .cu-btn {
    position: absolute;
    top: 50rpx;
    right: 20rpx;
}

.post_left image {
    border-radius: 10rpx;
}

.cu-chat {
    padding-top: 85px;
    padding-bottom: 20px;
}

.emoji_wrap {
    height: 300rpx;
    overflow-y: scroll;
    position: fixed;
    bottom: 0;
    left: 0;
}

.WxEmojiView {
    background-color: #eee;
    padding: 20rpx;
}

.wxPreEmoji {
    height: 50rpx;
    width: 50rpx;
    margin: 10rpx 19rpx;
    display: inline-block;
}

.box-emoji {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
}

.cu-bar.foot {
    height: calc(100rpx + env(safe-area-inset-bottom) / 2);
    padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}

.cu-chat .cu-item>.main .content {
    display: inline-block;
}