.container {
    padding-bottom: calc(80rpx + env(safe-area-inset-bottom) / 2);
}

.top_wrap .cu-custom {
    position: absolute;
}

.item-status {
    left: 70%;
    z-index: 8;
}

.screen-swiper video,.screen-swiper image {
    pointer-events: auto;
}

swiper-item {
    background: #ccc;
}

.detail-box {
    padding: 20rpx 20rpx 0;
    position: relative;
}

.detail-title {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 10rpx;
}

.detail-sub {
    position: relative;
    font-size: 12px;
}

.detail-sub .cu-tag {
    font-size: 20rpx;
    padding: 0 12rpx;
    height: 42rpx;
}

.detail-sub .page_view {
    position: absolute;
    right: 0;
    top: 8rpx;
}

.detail-text {
    border-top: 1px dashed #f2f2f2;
    padding-top: 15rpx;
    font-size: 14px;
    margin-bottom: 15rpx;
    line-height: 20px;
}

.item-footer {
    padding: 10px 10px 6px;
}

.field-item {
    font-size: 14px;
    line-height: 32px;
    border-top: 1px solid #f2f2f2;
    position: relative;
}

.detail-img {
    width: 100%;
    display: block;
    margin-bottom: 20rpx;
}

.ft-btn {
    display: inline-block;
    padding: 0;
    color: #aaa;
    background: #fff;
    font-size: 12px;
    line-height: 14px;
    margin-left: 20rpx;
}

.ft-btn text {
    margin-right: 8rpx;
}

.seller-panel {
    padding: 10rpx 0;
    background: #fff;
    margin-bottom: 20rpx;
}

.message-title {
    text-align: center;
    font-size: 16px;
    padding: 15rpx 0;
    border-bottom: 1px solid #eee;
    background: #fff;
}

.zan-btn {
    display: inline-block;
    padding: 10rpx 20rpx;
    color: #fff;
    font-size: 14px;
    line-height: 1.3;
}

.bt-btn {
    padding: 0;
    color: #aaa;
    background: #fff;
    font-size: 12px;
    line-height: 80rpx;
}

.msg-img {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 15rpx;
}

.reply {
    border-left: 2px solid #f60;
    padding-left: 10rpx;
    color: #aaa;
    font-size: 14px;
    margin-top: 15rpx;
}

.time-right {
    float: right;
    font-size: 12px;
    color: #aaa;
    padding-top: 18rpx;
}

.message-content {
    padding: 20rpx 30rpx;
}

.message-footer {
    border-top: 1px dashed #f2f2f2;
    padding: 5px 10px;
}

.bottom-bar {
    width: 100%;
    height: calc(80rpx + env(safe-area-inset-bottom) / 2);
    background: #fff;
    padding-left: 20rpx;
    font-size: 14px;
    color: #999;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9;
    box-sizing: border-box;
    border-top: 1px solid #eee;
}

.bt-price {
    color: #f44;
}

.bottom-bar .text_wrap {
    line-height: 80rpx;
}

.bottom-bar .zan-btn {
    border-radius: 0;
    line-height: 80rpx;
    padding: 0 30rpx;
}

.order-info {
    margin-bottom: 20rpx;
    width: 100%;
    overflow: hidden;
}

.order-title {
    font-size: 14px;
    color: #aaa;
    padding: 20rpx 20rpx 10rpx;
}

.mask {
    z-index: 9;
}

.video-box {
    position: relative;
    max-height: 430rpx;
    overflow: hidden;
    margin-bottom: 20px;
}

.play-mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,.4);
    text-align: center;
    line-height: 430rpx;
    z-index: 8;
}

.play-mask [class*="cuIcon-"] {
    font-size: 100rpx;
    color: #fff;
}

.item-pop {
    position: fixed;
    left: 0;
    right: 0;
    top: 30%;
    z-index: 10;
    padding: 0;
}

.item-pop video {
    width: auto;
    max-width: 100%;
    display: block;
}

.report {
    bottom: 300rpx;
    font-size: 12px;
}

.word-break {
    word-break: break-all;
}

.guide-box {
    position: fixed;
    padding-right: 20rpx;
    right: 10px;
    top: 0;
    z-index: 9999;
}

.guide-text {
    color: #fff;
    font-size: 16px;
    line-height: 24px;
    margin-top: 80px;
}

.call {
    left: 20rpx;
    right: auto;
}

.shop {
    border: 1px solid;
    border-radius: 10px;
    float: right;
    padding: 4rpx 18rpx;
    font-size: 12px;
}

.poster-box {
    text-align: center;
    width: 600rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%,-50%,0);
    transform-origin: center;
    transition: all .4s ease;
    z-index: 9999;
}

.poster-box image {
    width: 100%;
}

.save-poster {
    width: 100px;
    margin: 15px auto 0;
    background: #f60;
    color: #fff;
    text-align: center;
    border-radius: 5px;
    padding: 5px 0;
}

.cuIcon-homefill {
    font-size: 22px;
}

.nickname_wrap {
    line-height: 50rpx;
}

.nickname_wrap .fl:first-child {
    max-width: 67%;
}

.integrity_logo {
    width: 30%;
    height: 50rpx;
}

.integrity_logo image {
    width: 100%;
    height: 50rpx;
}

.guide_wrap .tips {
    position: absolute;
    left: 20rpx;
    border-radius: 20rpx;
}

.guide_wrap .windows {
    position: absolute;
    left: 0;
    height: 80rpx;
    line-height: 80rpx;
    width: 430rpx;
}

.guide_wrap .triangle_down {
    position: absolute;
    left: 60rpx;
    bottom: -20rpx;
    width: 0;
    height: 0;
    border-width: 20rpx 20rpx 0;
    border-style: solid;
}

.report_wrap {
    width: 80rpx;
    height: 80rpx;
    background: rgba(0,0,0,.5);
    border-radius: 50%;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    position: fixed;
    right: 15rpx;
    bottom: 25%;
    font-size: 24rpx;
}

.contact-btn {
    position: fixed;
    right: 20rpx;
    bottom: 25%;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 50%;
    border-width: 0;
    padding: 10rpx;
    background: rgba(0,0,0,.3);
    margin-bottom: 120rpx;
}

.contact-btn image {
    width: 66rpx;
    height: 66rpx;
}

.ad_wrap {
    position: fixed;
    top: 45%;
    right: 20rpx;
}

.ad_wrap image {
    width: 145rpx;
    height: 133rpx;
}