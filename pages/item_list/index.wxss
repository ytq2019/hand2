.container {
    padding-bottom: calc(10px + env(safe-area-inset-bottom) / 2);
}

.item-scroll {
    white-space: nowrap;
}

.list-item {
    width: 100%;
    background: #fff;
    position: relative;
    padding: 25rpx 35rpx;
    border-bottom: 1px solid #eee;
    display: inline-block;
    box-sizing: border-box;
}

.list-item .inline {
    vertical-align: middle;
}

.list-item .w20 {
    width: 18%;
}

.relative {
    position: relative;
}

.item-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #f40;
    position: absolute;
    top: -4rpx;
    right: 16rpx;
    z-index: 2;
}

.list-item .w80 {
    width: 82%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.item-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    display: block;
}

.scroll-hide {
    width: 110rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
    height: 148rpx;
    line-height: 148rpx;
    vertical-align: top;
    font-size: 14px;
}

.nickname {
    max-width: 200rpx;
    overflow: hidden;
    display: inline-block;
    vertical-align: bottom;
}

.suffix {
    display: inline-block;
}