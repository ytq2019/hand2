<include src="../templates/page-meta.wxml"></include>
<cu-custom bgColor="bg-gradual-{{ThemeStyle.gradual}}" isBack="{{true}}">
    <view slot="backText"></view>
    <view slot="content">预约回收</view>
</cu-custom>
<view class="container">
    <form bindsubmit="submitPost">
        <view class="post-bd">
            <view class="zan-font-14 zan-c-gray-darker bg-white margin-top">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">联系人</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="contact" placeholder="请输入联系人" value="{{formData.contact}}"></input>
                    </view>
                </view>
            </view>
            <view class="zan-font-14 zan-c-gray-darker bg-white margin-top">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">手机号</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="mobile" placeholder="请输入手机号" value="{{formData.mobile}}"></input>
                    </view>
                </view>
            </view>
            <view class="zan-font-14 zan-c-gray-darker bg-white margin-top">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">选择地区</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker bindchange="bindRegionChange" customItem="{{customItem}}" mode="region" value="{{region}}">
                            <view class="picker">
                                <view wx:if="{{formData.region.length}}">
                                    {{formData.region[0]}} {{formData.region[1]}} {{formData.region[2]}}
                                </view>
                                <view wx:elif="{{region.length}}">
                                    {{region[0]}} {{region[1]}} {{region[2]}}
                                </view>
                                <view wx:else>请选择地区</view>
                            </view>
                        </picker>
                    </view>
                </view>
            </view>
            <view class="zan-font-14 zan-c-gray-darker bg-white margin-top">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">详细地址</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="address" placeholder="请输入详细地址" value="{{formData.address}}"></input>
                    </view>
                </view>
            </view>
            <block wx:if="{{form_field.length>0}}" wx:for="{{form_field}}" wx:key="title">
                <view class="zan-font-14 zan-c-gray-darker bg-white margin-top" wx:if="{{item.type=='text'}}">
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-cell__hd">
                            <view class="weui-label">{{item.title}}</view>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" name="{{index}}" placeholder="{{item.extra.placeholder}}"></input>
                        </view>
                    </view>
                </view>
                <view wx:elif="{{item.type=='textarea'}}">
                    <view class="weui-cells__title">{{item.title}}</view>
                    <view class="weui-cells weui-cells_after-title">
                        <view class="weui-cell">
                            <view class="weui-cell__bd">
                                <textarea class="weui-textarea zan-font-14" name="{{index}}" placeholder="{{item.extra.placeholder}}"></textarea>
                            </view>
                        </view>
                    </view>
                </view>
                <view wx:elif="{{item.type=='radio'}}">
                    <view class="weui-cells__title">{{item.title}}</view>
                    <view class="weui-cells weui-cells_after-title">
                        <radio-group bindchange="radioChange" data-index="{{index}}" name="{{index}}">
                            <label class="weui-cell weui-check__label zan-font-14" wx:for="{{item.extra.option}}" wx:for-index="idx" wx:for-item="op" wx:key="value">
                                <radio checked="{{op.checked}}" class="weui-check" value="{{op.value}}"></radio>
                                <view class="weui-cell__bd">{{op.value}}</view>
                                <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{op.checked}}">
                                    <icon class="weui-icon-radio" size="16" type="success_no_circle"></icon>
                                </view>
                            </label>
                        </radio-group>
                    </view>
                </view>
                <view wx:elif="{{item.type=='checkbox'}}">
                    <view class="weui-cells__title">{{item.title}}</view>
                    <view class="weui-cells weui-cells_after-title">
                        <checkbox-group bindchange="checkboxChange" data-index="{{index}}" name="{{index}}">
                            <label class="weui-cell weui-check__label zan-font-14" wx:for="{{item.extra.option}}" wx:for-index="cdx" wx:for-item="cb" wx:key="value">
                                <checkbox checked="{{cb.checked}}" class="weui-check" value="{{cb.value}}"></checkbox>
                                <view class="weui-cell__hd weui-check__hd_in-checkbox">
                                    <icon class="weui-icon-checkbox_circle" size="20" type="circle" wx:if="{{!cb.checked}}"></icon>
                                    <icon class="weui-icon-checkbox_success" size="20" type="success" wx:if="{{cb.checked}}"></icon>
                                </view>
                                <view class="weui-cell__bd">{{cb.value}}</view>
                            </label>
                        </checkbox-group>
                    </view>
                </view>
                <view class="bg-white margin-top" wx:elif="{{item.type=='single_select'}}">
                    <view class="weui-cells weui-cells_after-title">
                        <view class="weui-cell weui-cell_select zan-font-14">
                            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                                <view class="weui-label">{{item.title}}</view>
                            </view>
                            <view class="weui-cell__bd">
                                <picker bindchange="bindPickChange" data-index="{{index}}" name="{{index}}" range="{{item.extra.option}}" value="{{item.extra.value}}">
                                    <view class="weui-select weui-select_in-select-after">{{item.extra.value}}</view>
                                </picker>
                            </view>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <view class="margin-top bg-white padding" wx:if="{{desc}}">
            <rich-text nodes="{{desc}}"></rich-text>
        </view>
        <view class="post-ft">
            <view class="flex flex-direction padding-top padding-lr">
                <button class="cu-btn bg-{{ThemeStyle.color}} lg" formType="submit">提交</button>
            </view>
        </view>
        <checkbox-group bindchange="changeAgree" class="margin-top-sm" wx:if="{{rule!=''}}">
            <label class="weui-agree" for="weuiAgree">
                <view class="weui-agree__text text-center">
                    <checkbox checked="{{isAgree}}" class="weui-agree__checkbox" id="weuiAgree" value="agree"></checkbox>
                    <view class="weui-agree__checkbox-icon">
                        <icon class="weui-agree__checkbox-icon-check" size="9" type="success_no_circle" wx:if="{{isAgree}}"></icon>
                    </view>
                    阅读并同意<view catchtap="showRuleDialog" class="inline weui-agree__link">《回收公约》</view>
                </view>
            </label>
        </checkbox-group>
    </form>
</view>
<dialog useSlot show="{{showRuleDialog}}" showCancelButton="{{false}}" showConfirmButton="{{false}}" title="回收公约">
    <view class="rule_wrap">
        <view class="message text-left padding-top-xl padding-lr-lg padding-bottom">
            <rich-text nodes="{{rule}}"></rich-text>
        </view>
    </view>
</dialog>
